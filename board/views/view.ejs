<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Post</title>
</head>
<body>

    <h1 id="postHeader">QnA 게시판</h1>

    <table id="postTable">
        <% data.forEach(function(item, index){ %>
            <% if(index == 0) { %>
            <tr style="height:10%">
            <th style="width: 20%">제목</th>
            <td>
                <%= item.title %>
            </td>
        </tr>
        <tr style="height:10%">
            <th style="width: 20%">작성자</th>
            <td >
                <% if(item.write == "on") %>
                <%= "익명"  %>
            </td>
        </tr>

        <tr style="height:10%">
            <th style="width: 20%">태그</th>
            <td>
                <%= item.tag %>                
            </td>
        </tr>

        <tr style="height:80%">
            <th style="width: 20%">내용</th>
            <td>
                <%= item.content %>
            </td>
        </tr>
        <% } %>
        <% }); %>
    </table>

    
    <% data.forEach(function(item, index){ %>
     <p> <%=item.comment_content %>
     <% if(item.comment > 0) { %>
        <p style = "clear : both; margin-right: 100px">
            <a  href="/comment/update/<%= item.comment_id%>"><%= "수정"%></a> 
            <a href="/comment/delete/<%= item.comment_id%>"><%= "/삭제" %></a> 
        </p>
     <% } %>
    </p>
    <% }); %>
     

    <form method="post">
    <table id = "commentTable">
            <tr style="height:5%">
                    <th>작성자 공개 여부</th>
                    <td ><input type="checkbox" name="comment_writer" id = "comment_writer"></td>         
            </tr> 
            <tr style="height:10%">
                <th>댓글쓰기</th>
                <td><textarea style="height:100% ; width: 100%" name="comment_content" id="comment_content" cols="30" rows="10"></textarea></td>
            </tr> 
        </table>
    <input style="float: right ; margin-top : 20px; margin-right: 100px" type = "submit" id = "commentPost" value = '댓글올리기'>
    </form>

    <button style="margin-top : 20px" id = "list" onclick="window.location.href='http://localhost:8080'">목록</button>
    <button style="margin-top : 20px" id = "update" onclick="window.location.href='http://localhost:8080/update/<%=data2 %>'">수정하기</button>  
    <button style="margin-top : 20px" id = "delete" onclick="window.location.href='http://localhost:8080/delete/<%=data2 %>'">삭제하기</button> 

</body>
</html>